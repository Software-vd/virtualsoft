<%= javascript_include_tag "cotizaciondetalles.js" %>

<%= simple_form_for([@cotizacion,@cotizaciondetalle], :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.input :producto_id, :label => "Producto",  :required => true %>
  <%= f.input :cantidad, :label => "Cantidad",  :required => true %>
  <%= f.input :subtotal, :label => "Subtotal",  :required => true %>
  
  <center>
  <%= f.submit "guardar", :class => 'btn btn-info' %>
  <%= link_to 'Atras', cotizacion_cotizaciondetalles_path(@cotizacion), :class => 'btn btn-inverse' %>
  </center>

<% end %>
