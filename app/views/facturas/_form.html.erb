<%= javascript_include_tag "facturas.js" %>

<%= simple_form_for([@cotizacion,@factura], :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
<br>
<br>
<%= f.input :fecha, :label => "Fecha",  :required => true, :input_html => { :class => 'datepicker' } %>
  <%= f.input :cantidad, :label => "Cantidad",  :required => true %>
  <%= f.label :producto_id %>:::
  <%= f.collection_select :producto_id, Producto.all, :id, :descripcion, prompt: "Producto"  %>
  <br>
  <br>
  <%= f.input :subtotal, :label => "Subtotal",  :required => true %>
  <center>
    <%= f.submit "guardar", :class => 'btn btn-info' %>
    <%= link_to 'Atras', cotizacion_facturas_path(@cotizacion), :class => 'btn btn-inverse' %>
  </center>
<% end %>
