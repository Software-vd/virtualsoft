<%= javascript_include_tag "facturas.js" %>

<%= simple_form_for(@factura, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
<br>
<br>
<%= f.input :fecha, :label => "Fecha",  :required => true, :input_html => { :class => 'datepicker' } %>
  <%= f.label :tipodoc_id %>
  <%= f.collection_select :tipodoc_id, Tipodoc.all, :id, :descripcion, :required => true, prompt: "Tipodoc"%>
  <br>
  <br>
  <%= f.input :numero_documento, :label => "Numero_documento",  :required => true %>
  <%= f.input :nombres, :label => "Nombres",  :required => true %>
  <%= f.input :apellidos, :label => "Apellidos",  :required => true %>
  <%= f.input :cantidad, :label => "Cantidad",  :required => true %>
  <%= f.label :producto_id %>
  <%= f.collection_select :producto_id, Producto.all, :id, :tipo_id, prompt: "Producto"  %>
  <br>
  <br>
  <%= f.label :cotizacion_id %>
  <%= f.collection_select :cotizacion_id, Cotizacion.all, :id, :fecha, prompt: "Cotizacion"  %>
  <br>
  <br>
  <%= f.input :valor, :label => "Valor",  :required => true %>
  <center>
    <%= f.submit "guardar", :class => 'btn btn-info' %>
    <%= link_to 'Atras', facturas_path, :class => 'btn btn-inverse' %>
  </center>
<% end %>
