<%- model_class = Tamano -%>
<center>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
</center>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Sigla) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tamanos.each do |tamano| %>
      <tr>
        <td><%= link_to tamano.id, tamano_path(tamano) %></td>
        <td><%= tamano.Sigla %></td>
        <td><%=l tamano.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.Editar")),
                      edit_tamano_path(tamano), :class => 'btn btn-mini btn-inverse' %>
          <%= link_to t('.destroy', :default => t("helpers.links.Eliminar")),
                      tamano_path(tamano),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<center>
<%= link_to t('.new', :default => t("helpers.links.Nuevo")),
            new_tamano_path,
            :class => 'btn btn-success' %>
</center>