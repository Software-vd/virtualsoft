<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>    
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
    
  </head>
  <body background="http://www.mascoalba.com/public/anagramas/fondos/madera-puerta.005.gif">
   <header class="navbar navbar-inverse navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
           <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
           </a>
           
           <div class="nav-collapse">
                <%= render 'layouts/navigation' %>
           </div>
        </div>
      </nav>
    </header>
    <br>
    <br>
    <br>
    <br>
    <center>
    <div id="container">
    <div class="user_nav">
      <% if current_user %>
        Sesion iniciada <%= current_user.email %>.
        <%= link_to "Salir", logout_path %>
      <% else %>
        <%= link_to "Registrarse", signup_path %> o
        <%= link_to "Iniciar sesion", login_path %>.
      <% end %>
    </div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
</div>
</center>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= yield %>
            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>