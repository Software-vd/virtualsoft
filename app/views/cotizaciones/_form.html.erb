<%= javascript_include_tag "cotizaciones.js" %>

<%= simple_form_for([@cliente,@cotizacion], :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
 
 <%= f.input :ciudad, :label => "Ciudad",  :required => true %>
 <%= f.input :fecha, :label => "Fecha",  :required => true, :input_html => { :class => 'datepicker' } %>

 <center>
   <%= f.submit "guardar", :class => 'btn btn-info' %>
   <%= link_to 'Atras', cliente_cotizaciones_path(@cliente), :class => 'btn btn-inverse' %>
 </center>
 
<% end %>