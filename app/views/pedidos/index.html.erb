<center><%= image_tag('pedid.jpg', :width=>'100') %></center>
<br>
<hr>
<%- model_class = Pedido -%>
<center><h1>Pedidos de <%= @cliente.nombres %></h1></center>
<hr>
<br><br>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>id</th>
      <th>Fecha</th>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Valor</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @pedidos %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Pedido', new_cliente_pedido_path(@cliente), :class => 'btn btn-success', :remote => true %></td>
      <td>
        Total Pedidos : <%= @pedidos.total_entries %>
      </td>
      <td>
      <p align="right">Total = $<%= number_to_currency(@pedidos.sum(&:valor), :precision => 0, :unit => "", :delimiter => ".") %></p>
      </td>
    </tr>
  </tfoot>
</table>
<%= link_to 'Atras', clientes_path, :class => 'btn btn-inverse' %>
<br />
<br />
<div align="center">
<%= will_paginate @pedidos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>