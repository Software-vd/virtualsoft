<%- model_class = Pedido -%>
<br>
<hr>
<br>
<center>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<img src="http://www.proveedorunico.com/imgcentral_compras.jpg!125_125_1.00.jpg"></center>
<br>
<hr>
<br>
<br>
<br>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Fecha) %></th>
      <th><%= model_class.human_attribute_name(:Numero_pedido) %></th>
      <th><%= model_class.human_attribute_name(:Cantidad) %></th>
      <th><%= model_class.human_attribute_name(:producto_id) %></th>
      <th><%= model_class.human_attribute_name(:cliente_id) %></th>
      <th><%= model_class.human_attribute_name(:valor_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= link_to pedido.id, pedido_path(pedido) %></td>
        <td><%= pedido.Fecha %></td>
        <td><%= pedido.Numero_pedido %></td>
        <td><%= pedido.Cantidad %></td>
        <td><%= pedido.producto_id %></td>
        <td><%= pedido.cliente_id %></td>
        <td><%= pedido.valor_id %></td>
        <td><%=l pedido.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.Editar")),
                      edit_pedido_path(pedido), :class => 'btn btn-mini btn-inverse' %>
          <%= link_to t('.destroy', :default => t("helpers.links.Eliminar")),
                      pedido_path(pedido),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<center>
<%= link_to t('.new', :default => t("helpers.links.Nuevo")),
            new_pedido_path,
            :class => 'btn btn-inverse' %>
</center>
