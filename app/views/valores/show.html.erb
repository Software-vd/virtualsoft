<%- model_class = Valor -%>
<center>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<center><dl class="dl-horizontal"></center>
  <dt><strong><%= model_class.human_attribute_name(:valor_unitario) %>:</strong></dt>
  <br>
  <dd><%= @valor.valor_unitario %></dd>
  <br>
  <dt><strong><%= model_class.human_attribute_name(:valor_total) %>:</strong></dt>
  <br>
  <dd><%= @valor.valor_total %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.Atras")),
              valores_path, :class => 'btn btn-inverse'  %>
  <%= link_to t('.edit', :default => t("helpers.links.Editar")),
              edit_valor_path(@valor), :class => 'btn btn-info' %>
  <%= link_to t('.destroy', :default => t("helpers.links.Eliminar")),
              valor_path(@valor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro?')) },
              :class => 'btn btn-danger' %>
</div>
</center>