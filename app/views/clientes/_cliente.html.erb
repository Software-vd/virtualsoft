<tr id=<%= "cliente_#{cliente.id}" %>>
  <td><%= link_to cliente.id, edit_cliente_path(cliente), :remote => true %></td>
  <td><%= cliente.tipodoc_id %></td>
  <td><%= cliente.numero_documento %></td>
  <td><%= cliente.nombres %></td>
  <td><%= cliente.apellidos %></td>
  <td><%= cliente.telefono %></td>
  <td><%= cliente.celular %></td>
  <td>
    <%= link_to image_tag('ver.gif', :title => "mostrar"), cliente, :remote => true, :class => 'btn btn-mini btn-success' %>
    <%= link_to image_tag('editar.gif', :title => "editar"), edit_cliente_path(cliente), :remote => true,
        :class => 'btn btn-mini btn-info' %>
    <%= link_to image_tag('eliminar.gif', :title => "eliminar"), cliente, 
        :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
    <%= link_to 'pedidos', cliente_pedidos_path(cliente) %>
  </td>
</tr>