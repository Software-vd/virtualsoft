<%= simple_form_for(@cliente, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
  <br>
  <br>
  <%= f.label :tipodoc_id %>
  <%= f.collection_select :tipodoc_id, Tipodoc.all, :id, :descripcion, :required => true, prompt: "Tipodoc"%>
  <br>
  <br>
  <%= f.input :numero_documento, :label => "Numero_documento",  :required => true %>
  <%= f.input :nombres, :label => "Nombres",  :required => true %>
  <%= f.input :apellidos, :label => "Apellidos",  :required => true %>
  <%= f.input :direccion, :label => "Direccion",  :required => true %>
  <%= f.input :telefono, :label => "Telefono",  :required => true %>
  <%= f.input :celular, :label => "Celular",  :required => true %>
  <center>
    <%= f.submit "guardar", :class => 'btn btn-info' %>
    <%= link_to 'Atras', clientes_path, :class => 'btn btn-inverse' %>
  <center>
<% end %>
