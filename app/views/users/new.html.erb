<center>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <br>
  <br>
  <div class="field">
    <%= f.label :usuario %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
  <%= f.label :correo %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :contraseña %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :confirmar_contraseña %>
    <%= f.password_field :password_confirmation %>
  </div>
  <br>
  <br>
  <div class="actions"><%= submit_tag "Registrar", :class =>'btn btn-primary' %></div>
<% end %>
</center>
