<%- model_class = Tipo -%>
<center>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<center><dl class="dl-horizontal"></center>
  <dt><strong><%= model_class.human_attribute_name(:Descripcion) %>:</strong></dt>
  <br>
  <dd><%= @tipo.Descripcion %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.Atras")),
              tipos_path, :class => 'btn btn-inverse'  %>
  <%= link_to t('.edit', :default => t("helpers.links.Editar")),
              edit_tipo_path(@tipo), :class => 'btn btn-info' %>
  <%= link_to t('.destroy', :default => t("helpers.links.Eliminar")),
              tipo_path(@tipo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro?')) },
              :class => 'btn btn-danger' %>
</div>
</center>