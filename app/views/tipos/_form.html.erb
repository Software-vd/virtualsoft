<%= simple_form_for(@tipo, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
  <div class="span5">
  <br>
  <br>
  <%= f.input :Descripcion, :label => "Descripcion",  :required => true %>
  </div>
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-info' %>
    <%= link_to 'Atras', tipos_path, :class => 'btn btn-inverse' %>
  </div>
<% end %>



