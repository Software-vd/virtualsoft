<%- model_class = Tipodoc -%>
<center>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
</center>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Sigla) %></th>
      <th><%= model_class.human_attribute_name(:cliente_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tipodocs.each do |tipodoc| %>
      <tr>
        <td><%= link_to tipodoc.id, tipodoc_path(tipodoc) %></td>
        <td><%= tipodoc.Sigla %></td>
        <td><%= tipodoc.cliente_id %></td>
        <td><%=l tipodoc.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.Editar")),
                      edit_tipodoc_path(tipodoc), :class => 'btn btn-mini btn-info' %>
          <%= link_to t('.destroy', :default => t("helpers.links.Eliminar")),
                      tipodoc_path(tipodoc),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<center>
<%= link_to t('.new', :default => t("helpers.links.Nuevo")),
            new_tipodoc_path,
            :class => 'btn btn-success' %>
</center>
